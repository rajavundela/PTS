@{
    ViewBag.Title = "Add Family";
}

@section HeadContent{
    <link href="/Content/Plant/AdminFormsStyles.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/Plant/AddFamily.js"></script>
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <form method="post" class="needs-validation" novalidate>
                    <hr>
                    <center><h1>Family Details</h1></center>
                    <hr>

                    <div class="form-group">
                        <input class="form-control" id="familySearch" list="familyList" placeholder="Enter family name" value="" />
                        <datalist id="familyList">
                            @for (int i = 0; i < ViewBag.FamilyList.Count; i++)
                            {
                                <option value="@ViewBag.FamilyList[i]"></option>
                            }
                        </datalist>
                    </div>
                    <a id="familySearchButton" class="btn btn-outline-secondary"><i class="fas fa-search"></i> Search</a>
                    <br />
                    <br />  
                    <div id="familyForm" hidden>
                        <div class="form-group">
                            <label>Family *</label>
                            <input class="form-control" id="familyName" name="familyName" required readonly />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                        <div class="form-group">
                            <label for="familyCommonName">Family Common Name</label>
                            <input type="text" class="form-control" name="familyCommonName" id="familyCommonName" disabled>
                        </div>

                        <div class="form-group">
                            <label for="habitat">Habitat</label>
                            <input type="text" class="form-control" name="habitat" id="habitat" disabled>
                        </div>

                        <div class="btn-box">
                            <button type="submit" id="familyInsert" class="btn btn-success" hidden>Submit <i class="fas fa-paper-plane"></i></button>
                            <a id="familySelect" class="admin-btn" href="" hidden>Plant <i class="fas fa-forward"></i></a>
                        </div>
                        <br>
                    </div>
                </form>

            </div>
        </div>

    </div>
</section>