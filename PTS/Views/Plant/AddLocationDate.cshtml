@{
    ViewBag.Title = "Location & Date";
}

@section HeadContent{
    <link href="/Content/Plant/AdminFormsStyles.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/Plant/AddLocationDate.js"></script>
}


<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr>
                <center><h1>Location and Date Details</h1></center>
                <hr>
                <a class="admin-btn" href="/Plant/AddVariety/?familyId=@ViewBag.FamilyId&plantId=@ViewBag.PlantId"><i class="fas fa-backward"></i> Plant</a><br />
                <br />
                <h1> Existing Locations:</h1>
                <p><i>Showing @ViewBag.DisplayLocations.Count existing locations.</i></p>
                <div class="container">
                    <div class="row">
                        @for (var i = 0; i < ViewBag.DisplayLocations.Count; i++)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="border:0.5px solid grey;padding-top:5px;">

                                <p>Location: @ViewBag.DisplayLocations[i][2]</p>
                                <p>Date Of Planting: @ViewBag.DisplayLocations[i][1]</p>
                                <p><a class="btn btn-danger btn-small" href="/Plant/DeleteLocationDate/@ViewBag.DisplayLocations[i][0]/?familyId=@ViewBag.FamilyId&plantId=@ViewBag.PlantId&varietyId=@ViewBag.VarietyId">Delete <i class="fas fa-trash-alt"></i></a></p>

                            </div>
                        }
                    </div>
                </div>
                <hr />
                <h1>Insert new Location:</h1>
                <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

                    <div class="form-group">
                        <label>Date of Planting *</label>
                        <input type="date" class="form-control" Name="dateOfPlanting" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>

                    <div class="form-group">
                        <label>Location(Nearest Block) *</label>
                        <input type="text" class="form-control" Name="location" placeholder="Enter Location" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>

                    <div>
                        <label for="plantImage1">Upload Image 1 </label>
                        <input type="file" id="plantImage1" name="img1" accept="image/*" required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Please select an image.</div>
                    </div>
                    <br>
                    <div>
                        <label for="plantImage2">Upload Image 2 </label>
                        <input type="file" id="plantImage2" name="img2" accept="image/*" required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Please select an image.</div>
                    </div>
                    <br>
                    <div>
                        <label for="plantImage3">Upload Image 3 </label>
                        <input type="file" id="plantImage3" name="img3" accept="image/*" required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Please select an image.</div>
                    </div>

                    <div class="btn-box">
                        <button type="submit" id="btnSubmit" class="btn btn-success">Submit & Generate QR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

