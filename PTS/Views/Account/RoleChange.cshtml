@{
    ViewBag.Title = "Change Role";
}

@section HeadContent{
    <style>
        .Admin {
            padding: 3%;
            margin: 5%;
            box-shadow: 3px 3px 5px 6px #ccc;
        }
        .Admin h1 {
            padding-bottom: 3%;
        }
    </style>
}

<section class="Admin">
    <form method="post" class="needs-validation" novalidate>
        <h1 style="text-align:center">Grant/Revoke Admin Rights</h1>
        <div class="container">
            <div class="form-group row ">
                <label for="Email" class="col-md-3 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" name="email" required/>
                </div>
            </div>

            <div class="form-group row ">
                <label for="role" class="col-md-3 col-form-label">Role</label>
                <div class="col-sm-8">
                    <select class="form-control" id="role" name="role" required>
                        @for (int i = 0; i < ViewBag.Roles.Count; i++)
                        {
                            <option value="@ViewBag.Roles[i]">@ViewBag.Roles[i]</option>
                        }
                    </select>
                </div>
            </div>
            <button type="submit" id="btnSubmit" class="btn btn-success">Submit</button>
        </div>
    </form>
</section>
