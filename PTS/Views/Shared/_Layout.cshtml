<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PTS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--font awesome script for icons-->
    <script src="https://kit.fontawesome.com/0741bebd44.js" crossorigin="anonymous"></script>
    @RenderSection("HeadContent", required:false)
</head>
<body>
    <nav class="navbar navbar-expand-md bg-light navbar-light fixed-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/Content/home/img/logo.png" style="width:200px;height:50px">
            </a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    @*<li class="nav-item">
                        <a class="nav-link" href="#">Plants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Family</a>
                    </li>*@
                    <li class="nav-item">
                        @Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sign Up <span class="fas fa-user-alt"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Login <span class="fas fa-sign-in-alt"></span></a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div>
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>
</html>
