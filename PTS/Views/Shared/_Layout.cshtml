<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/home/img/Home Logo.png" />
    <title>@ViewBag.Title | PTS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--font awesome script for icons-->
    <link href="~/Content/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet">
    @RenderSection("HeadContent", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-md bg-light navbar-light fixed-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/Content/home/img/LogoPlantTracker.png" style="width:150px;height:50px">
            </a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                @*<ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Plants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Family</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>

                    </ul>*@

                <ul class="nav navbar-nav ml-auto">
                    @if (Session["Username"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Account/LoginRegister">Login <span class="fas fa-sign-in-alt"></span> / Sign Up <span class="fas fa-user-alt"></span></a>
                        </li>
                    }
                    else
                    {
                        if (Session["UserType"].Equals("2"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-light" href="#" id="navbarDevelopmentDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Navigation</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDevelopmentDropdown">
                                    <div class="dropdown-header">Admin</div>
                                    <a class="dropdown-item" href="/Account/RoleChange/">Change Role</a>
                                    <div class="dropdown-divider"></div>

                                    <div class="dropdown-header">Plants</div>
                                    <a class="dropdown-item" href="/Plant/AddFamily/">Add or Delete Details</a>
                                </div>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link btn btn-light" href="~/Account/Index"><strong>@Session["Username"] </strong><span class="fas fa-user-circle"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-light" href="~/Account/Logout">Logout <span class="fas fa-sign-out-alt"></span></a>
                        </li>

                    }
                </ul>
            </div>

        </div>
    </nav>

    @if (TempData.ContainsKey("Message"))
    {
        <div id="message" class="alert alert-warning alert-dismissible fade show" role="alert" style="text-align:center">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div>
        @RenderBody()
    </div>
    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <img src="~/Content/home/img/LogoPlantTracker.png" alt="plantTracker" class="footer-logo">
                </div>
                <div class="col-md-4 col-xs-12 links">
                    <h4>Quick links</h4>
                    <p><a href="#">About us</a></p>
                </div>
                <div class="col-md-4 col-xs-12 loc">
                    <h4>Contact</h4>
                    <p><i class="far fa-envelope"></i>group7.infotech@gmail.com</p>
                    <p><i class="fas fa-map-marker-alt"></i>Lovely Infotech</p>
                </div>
            </div>
            <hr>
            <p class="copyright">Lovely Infotech Group-7</p>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    <script src="/Scripts/site.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
